<%-include('nav.ejs')%>

<form action="/admin/saveEditCustomer" class="p-3" method="post">
    <div class="container-fluid bg-white p-3 border">
        <div class="row">
                <input type="text" name="customer_id" value="<%=edit_customer[0].customer_id%>">
 
            <div class="col-md-6 mt-3">
                <label>Customer Name</label>
                <input type="text" name="customer_name" value="<%=edit_customer[0].customer_name%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                <label>Customer Mobile</label>
                <input type="text" name="customer_mobile" value="<%=edit_customer[0].customer_mobile%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                <label>Customer Address</label>
                <input type="text" name="customer_address" value="<%=edit_customer[0].customer_address%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                <label>Due Payment</label>
                <input type="text" name="customer_due_payment" value="<%=edit_customer[0].due_payment%>" class="form-control">
            </div>
            <div class="col-12 mt-3 text-end">
                <button class="btn btn-primary">Save Customer</button>
            </div>
        </div>
    </div>
</form>




