<%-include('nav.ejs')%>

<form action="/admin/saveEditDish" method="post">
    <div class="container-fluid bg-white p-3 border">
        <div class="row">
            
                <input type="hidden" name="edit_dish_id" value="<%=edit_dish[0].dish_id%>">
    
            <div class="col-md-6 p-3">
                <label>Edit Dish Name</label>
                <input type="text" name="edit_dish_name" value="<%=edit_dish[0].dish_name%>" class="form-control">
            </div>
            <div class="col-md-6 p-3">
                <label>Edit Dish Price</label>
                <input type="text" name="edit_dish_price" value="<%=edit_dish[0].dish_price%>" class="form-control">
            </div>
            <div class="col-md-6 p-3">
                <label>Edit Dish Image</label>
                <input type="file" name="edit_dish_image" accept="image/*" class="form-control">
            </div>
            <!-- <div class="col-md-3 p-3">
                <img src="/uploads/<%=edit_dish[0].dish_image%>" class="w-100 h-70">
            </div> -->
            <div class="col-md-6 p-3">
                <label>Edit Dish Description</label>
                <textarea name="edit_dish_detail" class="form-control"><%=edit_dish[0].dish_details%></textarea>
            </div>
        
            <div class="col-12 text-end p-3">
                <button class="btn btn-success">Save Dish</button>
            </div>
        </div>
    </div>
</form>

<%-include('footer.ejs')%>