  <body onload="print()" ondblclick="location.assign('/admin/create_order')">
    <section class="main-pd-wrapper" style="width: 450px; margin: auto">
      <div style="
                  text-align: center;
                  margin: auto;
                  line-height: 1.5;
                  font-size: 14px;
                  color: #00ab00;
                ">
                <svg class="sidebar-brand-full" width="125" height="50" alt="CoreUI Logo">
                    <use xlink:href="/assets/brand/coreui.svg#full"></use>
                  </svg>

                <p style="font-weight: bold; color: #000; margin-top: 15px; font-size: 18px;">
                  Tax Invoice/Bill
                </p>
                <p style="margin: 15px auto;">
                  Pune - Sambhajinagar Road <br>
                  Ahmednagar, Maharashtra, IN
                </p>
                <!-- <p>
                  <b>GSTIN:</b> 0987653456789
                </p>
                <p>
                  <b>CIN:</b> 0987653456789
                </p>
                <p>
                  <b>FSSAI No. :</b> 0987653456789
                </p> -->
                <hr style="border: 1px dashed rgb(131, 131, 131); margin: 25px auto">
              </div>
              <table style="width: 100%; table-layout: fixed">
                <thead>
                  <tr style="background-color:#b9c9f9;">
                    <th style="text-align:left ;">Sn.</th>
                    <th style="width: 220px;">Item Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                    <%
                    for(i=0;i<orderDishes.length;i++)
                    {
                        %>
                    
                  <tr class="invoice-items">
                    <td style="text-align:left;"><%=i+1%></td>
                    <td><%=orderDishes[i].dish_name%></td>
                    <td style="text-align:center;"><%=orderDishes[i].dish_price%></td>
                    <td style="text-align:center;"><%=orderDishes[i].dish_qty%></td>
                    <td style="text-align:center;">₹ <%=orderDishes[i].dish_total%></td>
                  </tr>
                  <%
                     }
                   %>
                </tbody>
              </table>

              <table style="width: 100%;
              background: #fcbd024f;
              border-radius: 4px;">
                <thead>
                  <tr>
                    <th>Total</th>
                    <th>&nbsp;</th>
                    <th style="text-align: right;"><b>₹ <%=orderDetails[0]['order_amt']%></b></th>
                    
                  </tr>
                </thead>
             
              </table>

              <table style="width: 100%;
              margin-top: 15px;
              border: 1px dashed #00cd00;
              border-radius: 3px;">
                <thead>
                  <tr>
                    <td>Paid Amount</td>
                    <td style="text-align: right;">₹ <%=orderDetails[0]['paid_amt']%></td>
                  </tr>
                  <tr>
                    <td>Pending Amount</td>
                    <td style="text-align: right;">₹ <%=orderDetails[0]['pending_amt']%></td>
                  </tr>
                </thead>
             
              </table>
              <h5>*Double Click To Back*</h5>


    </section>
  </body>
