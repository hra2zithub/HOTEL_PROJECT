<%-include('nav.ejs')%>
<form action="/admin/savecustomer" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h3>Add New Customer</h3>
            </div>
            <div class="col-md-4 mb-3">
                <b>Enter Customer Name</b>
                <input type="text" name="customer_name" class="form-control">
            </div>
            <div class="col-md-4 mb-3">
                <b>Enter Customer Mobile</b>
                <input type="text" name="customer_mobile" class="form-control">
            </div>
            <div class="col-md-4 mb-3">
                <b>Enter Customer Address</b>
                <input type="text" name="customer_address" class="form-control">
            </div>
            <div class="col-md-4 mb-3">
                <b>Due Payment</b>
                <input type="text" value="0" name="due_payment" class="form-control">
            </div>
            <div class="col-12 mb-3 text-end">
                <button class="btn btn-success">ADD CUSTOMER</button>
            </div>
        </div>
    </div>
</form>

